/**
Loading
*/
.loading {
  width: 750rpx;
  height: 100vh;
  position: fixed;
  z-index: 3000;
}
.loading-wrapper {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  align-items: center;
}

.top-line {
  border-top: 4rpx solid rgb(0, 168, 243);
}
.bottom-line {
  border-bottom: 4rpx solid rgb(0, 168, 243);
}

/* Modal */
.modal {
  position: fixed;
  width: 750rpx;
  height: 100vh;
  z-index: 8000;
}
.modal-wrapper {
  position: relative;
}
.modal-hui,
.modal-main {
  position: absolute;
}
.modal-hui {
  background: rgba(0, 0, 0, 0.4);
  width: 750rpx;
  height: 100vh;
}
.modal-main {
  z-index: 8001;
  width: 750rpx;
  height: 90vh;
  display: flex;
  justify-content: center;
  aligin-item: center;
  margin-top: 5vh;
}
.modal-main-inner {
  width: 678rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  aligin-item: center;
}
.modal-header {
  padding-top: 9rpx;
  height: 10vh;
  overflow: hidden;
}
.modal-del {
  margin-top: 36rpx;
}
.modal-content {
  padding: 8rpx 0;
  overflow: scroll;
  height: 73vh;
}
.modal-footer {
  height: 8vh;
  overflow: hidden;
}
.modal-btn {
  display: block;
  margin-top: 36rpx;
  font-weight: bolder;
  text-align: center;
  /*
  linear-gradient(
    rgb(0, 168, 243) 0%, 
    #0070c5 100%
  );
  */
}

.show-modal {
  opacity: 1;
  display: block;
  transition: all 2s;
}
.colse-modal {
  opacity: 0;
  display: none;
  transition: all 2s;
}

