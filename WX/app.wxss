@import "lib/icons/iconfont.wxss";

view {
  border-sizing: border-box;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100vh;
}

/**app.wxss**/
.def-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.def-bg {
  background: #f7f7f7;
}

.def-title {
  font-size: 1em;
  font-weight: 900;
}

.bg-white {
  background: white;
}

.main-bg, 
.bg-main {
  background: rgb(0, 168, 243);
}
.bd-main {
  border: 1px solid rgb(0, 168, 243);
}

.img {
  width: 100%;
  height: auto;
}

.fr {
  float: right;
}

.text-center {
  text-align: center;
}

.text-main {
  color: rgb(0, 168, 243);
}
.text-main-deep {
  color: #0067b8;
}

.text-white {
  color: white;
}

.text-money {
  color: gold;
}

.text-rich {
  color: rgb(0, 83, 121);
}

.text-light {
  color: #7e7e7e;
}

.text-grey {
  color: #9e9e9e;
}
.text-lightgrey {
  color: #bbbbbb;
}

.text-dark {
  color: #2e2e2e;
}

.text-upcase {
  text-transform: uppercase;
}

.text-weight {
  font-weight: 700;
}


.ele-hide {
  display: none;
}

.ele-unshow {
  visibility: hidden;
}

.flex {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.clearfix {
  zoom: 1;
}
.clearfix::after {
  content: "";
  height: 0;
  line-height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.row {
  padding-top: 72rpx;
  display: block;
  width: 750rpx;
  
}
.row-clear {
  margin: 0rpx;
  display: block;
  width: 750rpx;
}

.row-wrapper {
  margin: 0px 36rpx;
}

.row-wrapper-fullwidth {
  display: block;
  width: 100%;
}

.wrapper-in {
  padding: 0px 36rpx;
}

.ml-15 {
  margin-left: 36rpx;
}

.mt-30 {
  margin-top: 72rpx;
}
.mb-30 {
  margin-bottom: 72rpx;
}

.mt-half {
  margin-top: 18rpx;
}

.mt-15 {
  margin-top: 36rpx;
}
.mb-15 {
  margin-bottom: 36rpx;
}

.pd-15 {
  padding-bottom: 36rpx;
}

.pd-30 {
  padding-bottom: 72rpx;
}

.ul {
  display: block;
}
.ul .li {
  margin: 0px 36rpx;
}

.btn {
  padding: 15rpx 72rpx;
  letter-spacing: 1;
  display: inline;
  text-align: center;
  margin: auto;
  border-radius: 0px;
  font-size: 4vw;
}

.btn-main {
  border: 2px solid rgb(0, 168, 243);
  color: white;
  background: rgb(0, 168, 243);
}

.empty-30{
  height: 72rpx
}
.empty-50{
  height: 120rpx
}
.empty-70{
  height: 168rpx
}

.text-bold {
  font-weight: 600;
}
.text-bolder {
  font-weight: 900;
}

.def-sub {
    font-size: 0.8em;
}

.p {
  font-size: 1em;
  font-weight: 400;
}
.text-12 {
  font-size: 12px;
}
.text-tiny {
  font-size: 0.9em;
}

.text-big {
  font-size: 1.1em;
}

.text-large {
  font-size: 1.2em;
}

.text-huge {
  font-size: 1.3em;
}

.text-massive {
  font-size: 1.4em;
}

.text-mini {
  font-size: 0.7em;
}

.d-block {
  display: block;
}
.d-inline {
  display: inline;
}

.ps-relative {
  position: relative;
}
.ps-absolute {
  position: absolute;
}
.float-right {
  float: right;
}

/*

*/

.call-action {
  color: white;
  margin: 0px 36rpx;
  padding: 72rpx 0px 48rpx 0px;
}

.phone-btn {
  display: inline;
  background: #2f2f2f;
  color: white;
  border-radius: 0px;
  border: 2px solid #2f2f2f;
  font-weight: 700;
  font-size: 1.2em;
  margin-top: 50rpx;
  padding: 0rpx 72rpx;
  text-transform: uppercase;
}

.tool {
  position: fixed;
  z-index: 9999;
  right: 36rpx;
  bottom: 0;
}

.tool-wrapper {
  padding: 28rpx;
  background: rgba(0, 0, 0, 0.2);
}
.tool-icon {
  padding: 0rpx;
  margin: 0rpx;
  transform: rotate(-90deg);
}

.dump {
  position: relative;
}

.min-h-full {
  min-height: 100vh;
}

.line {
  width: 100%;
  margin-top: 12rpx;
  margin-bottom: 24rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.2);
}

/**
Loading
*/
.loading {
  width: 750rpx;
  height: 100vh;
  position: fixed;
  z-index: 3000;
}
.loading-wrapper {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  align-items: center;
}

.top-line {
  border-top: 4rpx solid rgb(0, 168, 243);
}
.bottom-line {
  border-bottom: 4rpx solid rgb(0, 168, 243);
}

